<div class="communityback">
  <div></br></div>
<div class="text-right">
  <%= search_form_for @q do |f| %>
    <%= f.select :genre_id_eq, Genre.all.map { |genre| [genre.name, genre.id] }, { include_blank: true }, include_blank: "ジャンル検索" %>
    <%= f.submit '検索' %>
  <% end %>
</div>

<div class="container">
  <h1 class="logo mb-2 text-center text-white" style="font-family: Darumadrop One;">メニューいちらん</h1>
  
  <div class="mt-3">  
    <% @menus_by_genre.each do |genre_id, menus| %>
      <h4 class="text-white font-weight-bold"><%= Genre.find(genre_id).name %></h4>
      <div class="row justify-content-center bg-light mx-5 border-top py-2">
        <div class="col-md-3"><strong>商品名</strong></div>
        <div class="col-md-2"><strong>税抜価格</strong></div>
        <div class="col-md-2 px-0"><strong></strong></div>
      </div>
      
      <% menus.each do |menu| %>
        <div class="row justify-content-center mx-5 py-1 text-white mt-2">
            <div class="col-md-3"><%= menu.name %></div>
            <div class="col-md-2"><%= menu.price %>円</div>
            <div class="col-md-2"><%= link_to"詳細ページへ",menu_path(menu.id), class: "btn btn-info" %></div>
        </div>
      <% end %>
    <% end %>
  </div>
  <a>
    </br>
    </br>
  </a>
</div>
</div>