<div class="container mt-5">
<h2>新規会員登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field row mt-5">
    <%= f.label :name, "名前", class:"col-md-3" %><br>
    <%= f.text_field :name,autofocus: true,class:"col-md-5" %>
  </div>
  
  <div class="field row mt-3">
    <%= f.label :email, "メールアドレス" ,class:"col-md-3" %><br />
    <%= f.email_field :email, autocomplete: "email",class:"col-md-5" %>
  </div>

  <div class="field row mt-3">
    <%= f.label :password, "パスワード(6文字以上)",class:"col-md-3" %>
    <%= f.password_field :password, autocomplete: "off" ,class:"col-md-5" %>
  </div>

  <div class="field row mt-3">
    <%= f.label :password_confirmation, "パスワード（確認用）", class:"col-md-3" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col-md-5" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "新規登録",class: "btn btn-sm btn-success px-5 " %>
  </div>
<% end %>
<div class="mt-3">
会員登録済みの方は<%= render "public/shared/links" %>
</br>
</div>
</div>