<h3>投稿はこちら！</h3>

<%= form_with model: @review do |f| %>
  
  <div>
  <%= f.label :title,"タイトル" %><br />
  <%= f.text_field :title,class:"col-10" %>
  </div>
  
  <div>
  <%= f.label :body,"本文" %><br />
  <%= f.text_area :body,class:"col-10" %>
  </div>
  
  <%= f.file_field :image, accept: "image/*",class:"mt-2" %>
  
  <div>
  <%= f.submit '投稿',class: "btn btn-sm btn-success px-5 mb-2 mt-2"  %>
  </div>
<% end %>