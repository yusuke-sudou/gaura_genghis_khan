<div>
  <%= image_tag @review.get_image %>
  <p>タイトル：<%= @review.title %></p>
  <p>本文：<%= @review.body %></p>
  <p>ユーザーネーム：<%= @review.user.name %></p>
  <p>投稿日：<%= @review.created_at.strftime('%Y/%m/%d') %></p>
  <% if @review.user == current_user %>
    <%= link_to "編集", edit_review_path(@review.id) %>
    <%= link_to "削除", review_path(@review.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
</div>
