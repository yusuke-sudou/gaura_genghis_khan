<h1><%= @community.name %>への新規投稿</h1>

<%= form_with(model:@post_board,url: community_post_boards_path(@community), local: true) do |form| %>
  <%= form.hidden_field :community_id,value: @community.id %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%#= form.fields_for :post_board do |post_board_fields| %>
    <%#= post_board_fields.text_area :body %>
  <%# end %>
  <%= form.text_area :body %>
  <%= form.submit "投稿" %>
<% end %>

<h1><%= @community.name %>の投稿一覧</h1>

<% @post_boards.each do |post_board| %>
  <% if post_board.id != nil %>
    <p><%= post_board.created_at.strftime("%Y年%m月%d日") %></p>
    <p><%= post_board.user.name %></p>
    <p><%= post_board.body %></p>
  <% end %>
<% end %>