<div class="container mt-5">
<h3 class="font-weight-bold">管理者ログイン</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field row mt-3">
    <%= f.label :email,"メールアドレス",class:"col-3" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-4" %>
  </div>

  <div class="field row mt-3">
    <%= f.label :password,"パスワード",class:"col-3" %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"col-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-sm btn-primary px-5 mb-2" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>