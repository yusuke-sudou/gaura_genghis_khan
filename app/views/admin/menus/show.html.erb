<div class="container">
  
  <h3 class="row py-4">メニュー詳細</h3>
    
    <div class="row py-3">
      <div class="col-md-3">
        <% if @menu.image.attached? %>
          <%= image_tag @menu.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      </div>
    
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-3">メニュー名</div>
          <div class="col-md-6"><%= @menu.name %></div>
        </div>
        
        <div class="row">
          <div class="col-md-3">説明</div>
          <div class="col-md-6"><%= @menu.explannation %></div>
        </div>
        
        <div class="row">
          <div class="col-md-3">税抜価格</div>
          <div class="col-md-6"><%= @menu.price %></div>
        </div>
        
        <div class="row">
          <div class="col-md-3">ジャンル</div>
          <div class="col-md-6"><%= @menu.genre.name %></div>
        </div>
        
        <div class="row py-3">
            <div>
                <%= link_to '編集する', edit_admin_menu_path, class:"btn btn-success btn-md btn-block" %>
                <%= button_to 'メニュー削除', admin_menu_path(@menu), method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-danger mt-3' %>
            </div>
        </div>
        
        </div>
    </div>
</div>